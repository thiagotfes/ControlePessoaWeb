			</p:panelGrid>
			<p:panelGrid columns="2">
				<p:commandButton value="Salvar"
					actionListener="#{empresaBean.salvar}"
					update=":mensagem :formCadastro:painel :formListagem:tabela" />
				<p:commandButton value="Cancelar" oncomplete="PF('dialogo').hide();" />
			</p:panelGrid>
		</h:form>
	</p:dialog>

</h:body>
